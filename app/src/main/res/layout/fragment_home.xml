<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="#1A1A26"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:text="Akademik"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ECEFF1"
            android:background="@drawable/chips"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:text="OLAHRAGA"
            android:textColor="#ECEFF1"
            android:background="@drawable/chips"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:text="seni"
            android:textColor="#ECEFF1"
            android:background="@drawable/chips"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:textSize="13dp"
            />

    </RelativeLayout>

<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#212330"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHomeNews"
            android:src="@drawable/no_internet"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="9dp">

            <android.support.v7.widget.CardView
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                app:cardElevation="-1dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#5e35af"
                android:layout_marginBottom="5sp">

                <TextView
                    android:textColor="#FFFF"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Feature"
                    android:layout_gravity="center"
                    android:paddingBottom="2sp"
                    android:paddingTop="1sp"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:textSize="16sp"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/homenewstxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="My favourite match: robert pires"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homenewsdesctxt"
                android:layout_marginBottom="5sp"
                android:text="arsenal arsenal arsenal arsenal arsenal arsenal arsenal arsenal arsenal arsenal"
                android:maxLines="2"
                android:textColor="#FFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginBottom="2sp"
                android:background="#FFFF"
                android:typeface="serif"
                android:focusable="true"
                android:clickable="true"
                android:foreground="@drawable/ripple">

                <TextView
                    android:text="READ STORY"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#5e35b0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="Upcoming Match"
            android:textColor="#FFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:textColor="#FFFF"
            android:textSize="12sp"
            android:text="Selasa 28 September"
            android:layout_marginLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHome"
            android:background="#212330"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_internet"/>


</LinearLayout>



</android.support.v4.widget.NestedScrollView>
</LinearLayout>