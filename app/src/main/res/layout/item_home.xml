<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:id="@+id/line1"
    android:weightSum="1.0"
    android:foreground="@drawable/ripple"
    android:clickable="true"
    android:focusable="true"
    android:elevation="10dp"
    android:onClick="onClickMatch"
    android:layout_marginBottom="1dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.425"
        android:weightSum="1.0"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/txtPlayerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Akuntansi"
                android:textAllCaps="true"
                android:textColor="#323c46"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginLeft="-5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/jurAciv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#FFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="-1sp"
        android:layout_marginRight="-1sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:background="#A9B0B3"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/UF_Time_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text="21:20"
                android:textColor="#FFFF" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.425"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginRight="-5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/jurBciv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#FFFF"
                app:civ_circle_background_color="#FFFF"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPlayerB"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="Akunansi"
                android:textAllCaps="true"
                android:textColor="#323c46"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>