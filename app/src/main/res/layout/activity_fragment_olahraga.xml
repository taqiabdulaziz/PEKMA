<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ffffff"
    tools:context="id.pekma.pekmavii.FragmentResult.Olahraga.Schedule.FragmentOlahraga">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvResult"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >
    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv1"
            android:visibility="invisible"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:backgroundTint="#CDD3D8"
            android:background="@drawable/no_content"
            />

        <TextView
            android:id="@+id/iv2"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data available."
            android:textColor="#ACB4BB"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv3"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check back later!"
            android:textColor="#ACB4BB"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
