<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="9dp"
    android:foreground="@drawable/ripple"
    android:background="@drawable/ripple"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="#FFFF" />

        <TextView
            android:id="@+id/newsTitleTxt"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/ivNews"
            android:gravity="fill_horizontal"
            android:maxLines="3"
            android:text="Judul mancay mancay mancay mancay mancay mancay mancay mancay mancay"
            android:textColor="#323c46"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconpekmasmallnews"
                android:layout_width="17sp"
                android:layout_height="17sp"
                android:layout_gravity="center"
                android:layout_margin="9dp"
                android:scaleType="fitStart"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsDescTxt"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:layout_toLeftOf="@+id/ivNews"
                android:text="Pekma VI I"
                android:textColor="#b0b5b9"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>




