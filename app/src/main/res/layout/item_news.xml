<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#20212d">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        tools:ignore="ExtraText">



            <ImageView
                android:id="@+id/ivNews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:background="@drawable/no_internet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="bottom">

            <!--<TextView-->
                <!--android:id="@+id/newsTitleTxt"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="4dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:maxLines="2"-->
                <!--android:text="mancay"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="16sp" />-->

            <TextView
                android:id="@+id/newsDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsTitleTxt"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/ivNews"
                android:maxLines="1"
                android:text="Judul mancay mancay mancay mancay"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:typeface="normal" />

            <TextView
                android:textColor="#653ad1"
                android:id="@+id/tv"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsDescTxt"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/ivNews"
                android:text="PEKMA NEWS" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>




