<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pola"
        android:backgroundTint="#7bc7c7c7"
        />

    <android.support.v7.widget.CardView
        android:layout_margin="9dp"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="80sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:padding="9dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kompetisi"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/dark"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <Spinner
                    android:spinnerMode="dropdown"
                    android:gravity="right"
                    android:id="@+id/spinnerCabor"
                    android:backgroundTint="@color/dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cabang Olahraga"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/dark"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">
                    <Spinner
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/dark"
                        android:id="@+id/spinnerDetailCabor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Spinner>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cv">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flfragment2">

                <include layout="@layout/activity_fragment_olahraga" />

            </FrameLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    
    


</RelativeLayout>