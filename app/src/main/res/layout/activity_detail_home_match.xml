<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="id.pekma.pekmavii.FragmentHome.DetailActivityHomeMatch">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130sp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:weightSum="95">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/jurAciv"
            android:layout_gravity="center_horizontal"
            android:layout_width="40sp"
            android:layout_height="50sp"
            />

        <TextView
            android:id="@+id/playerAtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tim #"
            android:textColor="#FFFF"
            android:textSize="11sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/JurAtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="D3 Akuntansi TB"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="90">

        <TextView
        android:text="0"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#FFFF"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"/>

        <TextView
        android:text=":"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#FFFF"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"/>

        <TextView
        android:text="0"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#FFFF"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="#FFF"
            android:id="@+id/jurBciv"
            android:layout_gravity="center_horizontal"
            android:layout_width="40sp"
            android:layout_height="50sp"
            />

        <TextView
            android:id="@+id/playerBtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tim #"
            android:textColor="#FFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/JurBtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="D3 Akuntansi TB"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_margin="9dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />
            <TextView
                android:text="Venue"
                android:layout_marginLeft="9dp"
                android:textColor="#323c46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="Student Center"
                android:textColor="#323c46"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="9dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:src="@drawable/tolongdihapus"
                android:scaleType="centerCrop"/>
            <View
                android:layout_margin="9dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />

            <TextView
                android:text="Location"
                android:layout_marginLeft="9dp"
                android:textColor="#323c46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

          <ImageView
              android:src="@drawable/placeholdermaps"
              android:scaleType="centerCrop"
              android:layout_margin="9dp"
              android:layout_width="match_parent"
              android:layout_height="100sp" />


        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>






</LinearLayout>
